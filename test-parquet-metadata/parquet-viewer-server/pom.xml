<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.an.tests</groupId>
		<artifactId>parquet-viewer-parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>parquet-viewer-server</artifactId>

	<dependencies>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.parquet</groupId>
			<artifactId>parquet-common</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.parquet</groupId>
			<artifactId>parquet-encoding</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.parquet</groupId>
			<artifactId>parquet-column</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.parquet</groupId>
			<artifactId>parquet-hadoop</artifactId>
		</dependency>
		<dependency>
	      	<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-client</artifactId>
	    </dependency>
    
    	<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger2</artifactId>
			<version>2.9.2</version>
		</dependency>
		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger-ui</artifactId>
			<version>2.9.2</version>
		</dependency>
    
    
	</dependencies>

	<profiles>
		<!-- 
		to generate:
		
		rm -rf ../parquet-viewer-ui/src/app/ext/*; rm -rf target/generated-typescript-angular7; mvn -Pswagger-gen swagger-codegen:generate; cp -rf target/generated-typescript-angular7/* ../parquet-viewer-ui/src/app/ext/ 
		
		
		
		 -->
		<profile>
			<id>swagger-gen</id>
			<build>
				<plugins>
					<plugin>
						<groupId>io.swagger</groupId>
						<artifactId>swagger-codegen-maven-plugin</artifactId>
						<version>${swagger-codegen.version}</version>
						<configuration>
							<inputSpec>http://localhost:8080/v2/api-docs</inputSpec>
							<language>typescript-angular</language>
							<output>${basedir}/target/generated-typescript-angular7</output>
							<configOptions>
								<ngVersion>7.2.12</ngVersion>
							</configOptions>
						</configuration>
						<executions>
							<execution>
								<id>generate-swagger-typescript-angular-7</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>generate</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
                </plugins>
            </build>
        </profile>
	</profiles>
	        
</project>